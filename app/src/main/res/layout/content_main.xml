<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imag"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/map" />

    <LinearLayout
        android:id="@+id/main_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imag"
        android:background="#BBB4B4"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/adddrvbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#444242"
            android:padding="8dp"
            android:text="Add Driver"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/std_reg_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#444242"
            android:padding="8dp"
            android:text="Register Student"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bs_det"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#444242"
            android:padding="8dp"
            android:text="Bus Details"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/noti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#444242"
            android:padding="8dp"
            android:text="Notice"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_below="@+id/main_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </RelativeLayout>
</ScrollView>
