<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D7866F6F"
    tools:context=".activities.fragment.AddDriver">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/fragment_bg">


        <TextView
            android:id="@+id/addtextdrv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Bus Details"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/addtextdrv1"
            android:layout_alignLeft="@+id/addtextdrv1"
            android:layout_marginRight="20dp"
            android:background="#817D7D" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_busdetails"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="10dp"
            android:clipToPadding="true"
            android:scrollbars="vertical" />

    </RelativeLayout>

</RelativeLayout>
