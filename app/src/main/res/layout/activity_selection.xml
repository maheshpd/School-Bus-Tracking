<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activity.Selection"
    android:background="@drawable/loginas">
    
    <TextView
        android:id="@+id/loginastext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login As"
        android:textColor="#646522"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="5dp"
        android:background="@drawable/loginasdesign"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"/>

    <Button
        android:id="@+id/principalbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Principal"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_below="@+id/loginastext1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttondesign"/>
    <Button
        android:id="@+id/parentbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parents"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_below="@+id/principalbutton"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttondesign"/>
    <Button
        android:id="@+id/driverbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_below="@+id/parentbutton"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttondesign"/>
</RelativeLayout>
